mixin list(name,arr)
    .side__list
        a(href="#")
            span.d-flex
                img(src="./assets/images/megadrop2.png", alt="").side__list__img
                h3= name
        ul
            each item in arr
                li
                    a(href="#")
                        i(class="fas fa-caret-right")
                        = item
.wrapper
    header.header
        .container
            .header__top
                .icon
                    ul.icon__list
                        mixin icon__top()
                            li.icon__item(class!=attributes.class)
                                a(href="#")
                                    block
                        +icon__top().active
                            i(class="fab fa-facebook-f").align-center
                        +icon__top()
                            img(src="./assets/images/gmail.png", alt="gmail icon").align-center
                        +icon__top()
                            i(class="fab fa-instagram").align-center 
                        +icon__top()
                            i(class="fab fa-twitter").align-center
                .header__top__login
                    .header__top__box
                        a(href="register.html").btn.btn--register Đăng Kí          
                    .header__top__box
                        a(href="login.html").btn.btn--login Đăng Nhập            
    .container
        .contact
            a(href="index.html").contact__logo
                img(src="./assets/images/Logo.png", alt="logo")
            .contact__hotline
                div(style={"margin-left":"187px"}).contact__hotline-content
                    h3.contact__hotline-title Hotline :
                    span.contact__hotline-des (04) 9500 9650 -(04) 9500 8850
                .contact__hotline-content
                    h3.contact__hotline-title Đặt hàng nhanh :
                    span.contact__hotline-des (04) 9500 9650 -(04) 9500 8850
            .contact__search-bar.icon-search                    
                    input(type="text" placeholder="Tìm kiếm...").contact__search-bar--rounded                  
    .main-menu.bg-black    
        .container
            nav.menu
                button.menu__toggle-collapse
                    i(class="fas fa-bars") 
                .menu__collapse
                    ul.menu__list
                        li.menu__item.active.hover-me
                            a(href="index.html").menu__link Trang chủ
                            .sub-menu-home
                                .sub-menu-home__list
                                    .side
                                        +list("MÁY KHOAN ĐA NĂNG CNC",a1)
                                        +list("MÁY ÉP NHỰA THỦ CÔNG",a2)
                                    .side
                                        +list("MÁY CẮT PLATMAR",a1)
                                        +list("MÁY UỐN TÔN ĐIỆN",a2)
                                    .side
                                        +list("MÁY PHAY CÔNG NGHIỆP",a1)
                                        +list("MÁY NÉN KHÍ CNC",a2)
                                    .side
                                        img(src="./assets/images/megadrop.png", alt="").side__img
                        li.menu__item
                            mixin li--menudropdown1(name)
                                li(class!=attributes.class)
                                    a(href="#")
                                        i(class="fas fa-caret-right")
                                        = name
                            a(href="#").menu__link Giới thiệu
                            .sub-menu-about-1
                                ul
                                    mixin li--menudropdown2(name)
                                        li(class!=attributes.class)
                                            a(href="#")
                                                i(class="fas fa-caret-right")
                                                = name
                                            .sub-menu-about-2
                                                ul                                                   
                                                    for item in limenudropdown1
                                                        +li--menudropdown1(item)
                                    for item in arrSubmenu1
                                        +li--menudropdown2(item)
                        mixin li-header-menu(href,item)
                            li.menu__item
                                a(href=href).menu__link= item      
                        +li-header-menu("listpage.html","Sản Phẩm")
                        +li-header-menu("blog.html","Tin Khuyến Mãi")
                        +li-header-menu("#","Dịch Vụ")
                        +li-header-menu("#","Liên hệ")
            .cart
                a(href="#").cart__icon
                    img(src="./assets/images/cart-icon.png", alt="card-icon")
                    .wrapper-badge
                        span.badge 0
                .cart__dropdown
                    ul.cart__list
                        mixin cart-item(src)
                            li.cart__item
                                img(src=src, alt="").cart-image
                                .cart__desc
                                    h3  máy khoan black decker
                                    p 1 x 
                                        span 1.250.000 Đ
                                .cart__close
                                    i(class="fas fa-times")
                        +cart-item("./assets/images/Untitled-10.png")
                        +cart-item("./assets/images/Untitled-9.png")
                        +cart-item("./assets/images/Untitled-16.png")
                        li.cart__item.justify-flex-end
                            .cart__desc.mr-3
                                h3 Tổng tiền: 
                                    span 4.560.000 Đ
                                a(href="#").btn.btn--orange THANH TOÁN
            .clear 